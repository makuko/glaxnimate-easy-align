{
    "name": "Easy Align",
    "description": "Allows easy alignment of anchor points as well as relative to other shapes",
    "author": "Markus Schmidt",
    "engine": "python",
    "version": 1,
    "icon": "icons/easy-align.svg",
    "services": [
        {
            "type": "action",
            "label": "EasyAlign: Set target",
            "script": {
                "module": "set_target",
                "function": "main"
            }
        },
        {
            "type": "action",
            "label": "EasyAlign: Align with target",
            "script": {
                "module": "align_with_target",
                "function": "main"
            }
        },
        {
            "type": "action",
            "label": "EasyAlign: Align anchor point",
            "script": {
                "module": "align_anchor_point",
                "function": "main"
            }
        }
    ]
}
